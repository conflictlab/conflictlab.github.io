{
  "name": "pace-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:fast": "next build",
    "prebuild": "node scripts/prebuild.js",
    "covers": "node scripts/generate-covers.js",
    "report:prepare": "node scripts/report-prepare-data.js",
    "report:sync-overleaf": "node scripts/report-sync-overleaf.js",
    "report:update-subtitle": "node scripts/report-update-subtitle.js",
    "report:publish": "node scripts/report-publish.js --title-source=archive",
    "report:batch": "node scripts/report-batch.js",
    "report:monthly": "node scripts/report-batch.js --latest=1",
    "report:all": "npm run report:prepare && echo 'Run Python: (cd reports/generator && python report.py)' && npm run report:sync-overleaf && echo 'Compile LaTeX: (cd reports/overleaf && latexmk -pdf main_Fall_2025.tex)' && npm run report:publish",
    "scenarios:convert": "node scripts/convert-scenarios-pkl.js --src sce_dictionary.pkl --out public/data/scenarios.json",
    "matches:convert": "node scripts/convert-matches-pkl.js --src matches.pkl --out public/data/matches.json",
    "data:minmax": "node scripts/update-minmax-from-hist.js",
    "scenarios:denorm": "node scripts/denorm-scenarios.js",
    "data:update": "npm run data:minmax && npm run scenarios:denorm",
    "start": "next start",
    "lint": "next lint",
    "csv:snapshot": "node scripts/csv-to-snapshot.js",
    "csv:sync:github": "node scripts/sync-forecasts-from-github.js",
    "grid:centroids": "node scripts/priogrid-shp-to-centroids.js",
    "grid:build": "node scripts/priogrid-shp-join-csv.js --csv https://raw.githubusercontent.com/ThomasSchinca/Live_3D_forecast/main/df_output.csv",
    "grid:csv": "node scripts/grid-geojson-to-csv.js",
    "grid:csv:months": "node scripts/grid-month-points-to-csv.js",
    "api:export": "node scripts/export-static-api.js",
    "context:fetch:wikipedia": "node scripts/fetch-wikipedia-summaries.js",
    "context:fetch:reliefweb": "node scripts/fetch-reliefweb-updates.js",
    "context:update": "npm run context:fetch:reliefweb && npm run context:fetch:wikipedia"
  },
  "dependencies": {
    "@types/leaflet": "^1.9.20",
    "d3": "^7.9.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.292.0",
    "next": "14.0.0",
    "react": "^18",
    "react-dom": "^18",
    "react-leaflet": "^4.2.1",
    "react-simple-maps": "^3.0.0",
    "topojson-client": "^3.1.0",
    "website-scraper": "^5.3.1"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "postcss": "^8",
    "shapefile": "^0.6.6",
    "tailwindcss": "^3.3.0",
    "topojson-server": "^3.0.1",
    "topojson-simplify": "^3.0.3",
    "typescript": "^5"
  }
}
